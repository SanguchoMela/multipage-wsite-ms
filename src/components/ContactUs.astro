---
import { Icon } from "astro-icon/components";
import { contactData } from "../data/contactData";
import { socials } from "../data/socials";
---

<section class="mt-12">
  <div class="space-y-4">
    <h1>¡Hablemos!</h1>
    <h3>"Conectando personas, una taza de café a la vez."</h3>
    <p>
      ¿Tienes alguna pregunta, sugerencia o simplemente quieres saludar? ¡Nos
      encantaría responder!
    </p>
  </div>
</section>

<section id="contacto" class="bg-amber-50 py-16">
  <div class="grid grid-cols-1 md:grid-cols-2 justify-items-center gap-10">
    <div class="space-y-6 lg:min-w-[60%]">
      <h3>Conecta con nosotros</h3>
      <!-- <p></p> -->
      <ul class="space-y-4">
        {
          contactData.map((item) => (
            <li class="flex items-center gap-3 p-4 bg-white rounded-lg shadow">
              <span class="px-3">
                <Icon name={item.icon} class="text-xl text-amber-700" />
              </span>
              <div class="space-y-1">
                <h4 class="font-medium">{item.name}</h4>
                <p>{item.value}</p>
              </div>
            </li>
          ))
        }
      </ul>

      <ul class="flex justify-evenly mt-10">
        {
          socials.map((social) => (
            <a
              href={social.ref}
              aria-label={social.name}
              target="_blank"
              rel="noopener noreferrer"
              class="text-slate-600 hover:text-slate-800 transition"
            >
              <li class="p-3 md:p-4 bg-white rounded-full shadow">
                <Icon name={social.icon} class="text-2xl" />
              </li>
            </a>
          ))
        }
      </ul>
    </div>

    <form class="bg-white rounded-lg shadow p-4 md:p-6 space-y-3 md:space-y-6 lg:min-w-[80%]">
      <h3>Envíanos un mensaje</h3>
      <div>
        <label for="name" class="block text-sm font-medium text-amber-900"
          >Nombre</label
        >
        <input
          type="text"
          id="name"
          name="name"
          placeholder="Tu nombre"
          class="w-full mt-1 p-3 border border-amber-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-400"
        />
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label for="email" class="block text-sm font-medium text-amber-900"
            >Correo Electrónico</label
          >
          <input
            type="email"
            id="email"
            name="email"
            placeholder="tu@email.com"
            class="w-full mt-1 p-3 border border-amber-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-400"
          />
        </div>
        <div>
          <label for="email" class="block text-sm font-medium text-amber-900"
            >Número de Teléfono</label
          >
          <input
            type="text"
            id="phone"
            name="phone"
            placeholder="+123 4567890"
            class="w-full mt-1 p-3 border border-amber-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-400"
          />
        </div>
      </div>

      <div>
        <label for="message" class="block text-sm font-medium text-amber-900"
          >Mensaje</label
        >
        <textarea
          id="message"
          name="message"
          rows="4"
          placeholder="Escribe tu mensaje..."
          class="w-full mt-1 p-3 border border-amber-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-400"
        ></textarea>
      </div>

      <button
        type="submit"
        class="w-full bg-amber-700 text-white font-semibold py-3 rounded-lg hover:bg-amber-800 transition"
      >
        Enviar
      </button>
    </form>
  </div>
</section>
