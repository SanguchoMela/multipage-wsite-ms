---
import { Icon } from "astro-icon/components";
import { contactData } from "../data/contactData";
import { socials } from "../data/socials";
import ContactForm from "./ContactForm.astro";
---

<section class="mt-12">
  <div class="space-y-4">
    <h1>¡Hablemos!</h1>
    <h3>"Conectando personas, una taza de café a la vez."</h3>
    <p>
      ¿Tienes alguna pregunta, sugerencia o simplemente quieres saludar? ¡Nos
      encantaría responder!
    </p>
  </div>
</section>

<section id="contacto" class="bg-amber-50 py-16">
  <div class="grid grid-cols-1 md:grid-cols-2 justify-items-center gap-10">
    <div class="space-y-3 lg:min-w-[60%]">
      <h3>Conecta con nosotros</h3>
      <ul class="space-y-3">
        {
          contactData.map((item) => (
            <li class="flex items-center gap-3 p-4 bg-white rounded-lg shadow">
              <span class="px-3">
                <Icon name={item.icon} class="text-xl text-amber-700" />
              </span>
              <div class="space-y-1">
                <h4 class="font-medium">{item.name}</h4>
                <p>{item.value}</p>
              </div>
            </li>
          ))
        }
      </ul>

      <ul class="flex justify-evenly mt-8">
        {
          socials.map((social) => (
            <a
              href={social.ref}
              aria-label={social.name}
              target="_blank"
              rel="noopener noreferrer"
              class="text-slate-600 hover:text-slate-800 transition"
            >
              <li class="p-3 md:p-4 bg-white rounded-full shadow">
                <Icon name={social.icon} class="text-2xl" />
              </li>
            </a>
          ))
        }
      </ul>
    </div>
    <ContactForm />
  </div>
</section>
